<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/game_layout">

    <!-- 这个是标题栏，不管它就可以了 -->



    <include layout="@layout/title_layout" />

    <!-- 这个是留着放地图用的，如果用不上的话删掉就好了，其它布局从下面开始写起 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_board"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iv_board"
            android:background="@mipmap/board" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/game_information"
        android:background="@color/colorPrimaryLight">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/f_blue"
            android:id="@+id/f_color"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/dice"
            android:src="@drawable/loopdice"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background= "@mipmap/sound_btn"
            android:id="@+id/sound_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>


</LinearLayout>
