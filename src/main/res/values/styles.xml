<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tablayout_text" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="hint_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="firstButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

    <style name="secondButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">bottom|left</item>
    </style>

    <style name="thirdButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">right|top</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/mode_button</item>
    </style>

    <!--
    这个style需要minAPI为21
    <style name="login_button_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlNormal"></item>
        <item name="android:colorButtonNormal"></item>
    </style>
    -->
</resources>
