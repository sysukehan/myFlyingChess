<!-- 有一些控件的style我放在这里，大家如果需要的话尽情往下添加，不过不要修改已有的style -->
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="tablayout_text" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="hint_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/mode_button</item>
    </style>

    <!--
    这个style需要minAPI为21
    <style name="login_button_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlNormal"></item>
        <item name="android:colorButtonNormal"></item>
    </style>
    -->
</resources>
